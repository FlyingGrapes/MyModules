<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModuleDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewModCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Module Code" />

        <TextView
            android:id="@+id/textViewModName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Module Name" />

        <TextView
            android:id="@+id/textViewAcademicYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Academic Year" />

        <TextView
            android:id="@+id/textViewSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester" />

        <TextView
            android:id="@+id/textViewModleCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Module Credit" />

        <TextView
            android:id="@+id/textViewVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/goback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button" />
    </LinearLayout>
</LinearLayout>